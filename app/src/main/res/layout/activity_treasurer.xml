<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvTreasurer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treasurer Dashboard"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/totalContributionsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KSh 0" />

    <TextView
        android:id="@+id/totalMembersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Members" />

    <TextView
        android:id="@+id/pendingRequestsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Pending" />


    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout" />

</LinearLayout>
